<p id="notice"><%= notice %></p>

<h1>Listing Corrections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Match</th>
      <th>Type</th>
      <th>Change</th>
      <th>Minute</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @corrections.each do |correction| %>
      <tr>
        <td><%= correction.name %></td>
        <td><%= correction.link %></td>
        <td><%= correction.match_id %></td>
        <td><%= correction.typeOfCorrection %></td>
        <td><%= correction.change %></td>
        <td><%= correction.minute %></td>
        <td><%= link_to 'Show', correction %></td>
        <td><%= link_to 'Edit', edit_correction_path(correction) %></td>
        <td><%= link_to 'Destroy', correction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

